echo "Installing repo"
wget http://packages.couchbase.com/releases/couchbase-release/couchbase-release-1.0-4-x86_64.rpm
rpm -iv couchbase-release-1.0-4-x86_64.rpm
yum install libcouchbase-devel libcouchbase2-bin php-devel
echo "Installing extra extensions"
mkdir /opt/app-root/php.d
cd /opt/app-root/
pecl bundle couchbase
cd couchbase
phpize
./configure -q
make
echo "extension=/opt/app-root/couchbase/modules/couchbase.so" >> /opt/app-root/php.d/couchbase.ini
echo "Running assemble script"
cd /opt/app-root/src/
/usr/libexec/s2i/assemble